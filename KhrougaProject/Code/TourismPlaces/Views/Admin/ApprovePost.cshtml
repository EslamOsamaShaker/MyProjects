@model IEnumerable<TourismPlaces.ViewModels.Admin.AdminApprovePlaceViewModel>;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Approve";
    int counter = 1;

}
<link href="~/Datatable/css/bootstrap.css" rel="stylesheet" />
<link href="~/Datatable/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/Datatable/css/bootstrap-select.min.css" rel="stylesheet" />


<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="card-body">
                <h4>Places</h4>
                <p class="card-description">
                   approve owners places to be visible to users

                </p>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                        <thead>
                            <tr class="text-center">
                                <th>
                                    #
                                </th>
                                <th>
                                    Place name
                                </th>

                                <th>
                                    Rate
                                </th>
                                <th>
                                    Entry price (EGP)
                                </th>
                                <th>
                                    Government
                                </th>
                                <th>
                                    Owner
                                </th>
                                <th>
                                    Approved
                                </th>
                                <th> Details</th>

                            </tr>
                        </thead>

                        <tbody class="text-center">
                            @foreach (var place in Model)
                            {
                                <tr>
                                    <td>@(counter++)</td>
                                    <td>@place.PlaceName</td>
                                    <td>@place.Rate</td>
                                    <td>@place.EntryPrice</td>
                                    <td>@place.CovernmentName</td>
                                    <td>@place.Owner</td>
                                 
                                    <td>
                                        <a asp-action="ChangeApprove" asp-controller="Admin" asp-route-placeId="@place.PlaceId" class="btn btn-success btn-rounded btn-fw ">Approve Post</a>
                                    </td>
                                    <td><a asp-action="PlaceDetails" asp-controller="Admin" asp-route-placeId="@place.PlaceId" class="  btn btn-primary btn-rounded btn-fw ">Details</a></td>

                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




<script src="~/jquery/jquery.js"></script>
<script src="~/Datatable/js/jquery.dataTables.min.js"></script>
<script src="~/Datatable/js/dataTables.bootstrap4.min.js"></script>
<script src="~/Datatable/js/bootstrap-select.js"></script>


<script>
    var jQuery3 = $.noConflict(true);

    jQuery3(function () {
        jQuery3('.js-basic-example').DataTable({
            select: true,
            responsive: true,
            paging: true,
            pageLength: 5,
            bSort: true,
            bFilter: true,
            bLengthChange: false,
            bInfo: false,
            lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]



        });
    });

</script>