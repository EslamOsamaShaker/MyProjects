@model TourismPlaces.ViewModels.PlaceRemoveViewModel
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewBag.Title = "Place";
}

<div class="row">
    
    <div class="form-group text -center">
        Archaeological in | <select class="form-control form-control-lg" style="display: inline;" asp-for="@Model.GovernmentId" asp-sel asp-items="@(SelectList)ViewBag.GovernmentList">
            </select>
    </div>
   
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-header">
                <p>Place Details</p>
            </div>
            <div class="row">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body pt-4 mt-4">

                           

                            <div class="form-group text-center">
                                <div class="  ">
                                    <p >
                                        @($"{Model.Name}".ToUpper())
                                    </p>
                                </div>
                                
                            </div>



                            <div class="form-group">
                                <label asp-for="Address"> In :</label>

                                <p type="text" readonly disabled > @($"{Model.Address}")</p>
                            </div>

                          
                        </div>
                    </div>
                </div>
            </div>


            <div class="card-body">

                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">


                    <div class="carousel-inner">
                        @foreach (var img in Model.Photos)

                        {
                            <div class="carousel-item @(img.PhotoPath == Model.FirstImg ? "active" : "") ">
                                <img class="d-block w-100" style="height:600px; " src="~/Files/photos/@img.PhotoPath" alt="@img.PhotoPath">
                            </div>
                        }

                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <div class="form-group">
                    <label asp-for="Details"> Details</label>
                    <p type="text" readonly disabled>@($"{Model.Details}".ToUpper())</p>
                </div>
            </div>

        </div>

    </div>


</div>


<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-header">
                <p>Rating and Pricing</p>
            </div>
            <div class="card-body pt-4 mt-4">

      

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-primary text-white" style="height:55px">Ticket</span>
                        </div>
                        <h3 class="form-control form-control-lg" style="display: inline;">
                            @($"{Model.EntrancePrice}".ToUpper())
                        </h3>


                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-primary text-white" style="height:55px; width:74px;">Rate  </span>

                        </div>
                        <h3 class="form-control form-control-lg" style="display: inline;">
                            @($"{Model.rate}".ToUpper())
                            <i class="bi bi-star-fill"></i>
                        </h3>

                    </div>
                </div>


           


            </div>
            @****************************************************************************************************@

            @****************************************************************************************************@

            <input type="hidden" asp-for="@Model.PlaceId" />



                <a asp-action="PlacesInGovernment" asp-controller="User" asp-route-Id="@Model.GovernmentId" class="btn btn-sm btn-outline-primary">Go Back</a>


                <a asp-action="BookNow" asp-controller="User" asp-route-Id="@Model.GovernmentId" class="btn btn-sm btn-outline-success pull-right">Book Now</a>
        


        </div>
    </div>
</div>
