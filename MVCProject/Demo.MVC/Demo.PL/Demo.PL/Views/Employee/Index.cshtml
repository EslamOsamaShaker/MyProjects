@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
  //  Layout = "Create";
}


<h1>All Employee</h1>
<br />
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br />
<br />
<form class="my-3">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Department Id" name="searchId" class="from-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="search" class="btn btn-success btn-block" />
        </div>
    </div>
</form>

<form class="my-3">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Name" name="searchValue" class="from-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="search" class="btn btn-success btn-block" />
        </div>
    </div>
</form>
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>@Html.DisplayNameFor(x => x.Image)</th>

                <th>@Html.DisplayNameFor(x => x.Address)</th>
                <th>@Html.DisplayNameFor(x => x.Email)</th>
                <th>@Html.DisplayNameFor(x => x.Salary)</th>
                <th>@Html.DisplayNameFor(x => x.HireDate)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <img src="~/Files/Images/@item.ImageUrl" class="img-circle" height ="40" width="40" alt="Employee Image " />
                    </td>
                    <td>@item.Address</td>
                    <td>@item.Email</td>
                    <td>@item.Salary</td>
                    @*<td>@item.HireDate.Day-@item.HireDate.Month-@item.HireDate.Year</td>*@
                    <td>@Html.DisplayFor(m => item.HireDate.Day)-@Html.DisplayFor(m => item.HireDate.Month)-@Html.DisplayFor(m => item.HireDate.Year)

                    <td>
                        <a class="btn btn-success"  asp-action="Details" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning"  asp-action="Update" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger"  asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Employees Found!!</h3>
    </div>
}

