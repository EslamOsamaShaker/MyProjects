@model TourismPlaces.ViewModels.Account.ForgetPasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Forget Password";
}


<h6 class="font-weight-light">Forget you password?</h6>

<form class="pt-3" asp-action="ForgetPassword" asp-controller="Account">
    <div class="text-danger" asp-validation-summary="All">
    </div>

    <div class="form-group">
        <input type="email" asp-for="Email" class="form-control form-control-lg" placeholder="user@domain.com">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Forget Password</button>
    </div>
    <div class="my-2 d-flex justify-content-between align-items-center">
        <div class="form-check text-muted">
            Already Have an account
        </div>
        <a asp-action="Index" asp-controller="Account" class="auth-link text-black">Login?</a>
    </div>
    <div class="text-center text-muted mt-4 font-weight-light">
        Don't have an account?
        <a asp-action="Registration" asp-controller="Account" class="text-primary">Create</a>
    </div>
</form>


@section Scripts
    {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    }


