@using TourismPlaces.Data
@inject ApplicationDbContext context
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Untree.co">
    <link rel="shortcut icon" href="~/favicon.png" />

    <meta name="description" content="" />
    <meta name="keywords" content="bootstrap, bootstrap5" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;600;700&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="~/user/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/user/fonts/flaticon/font/flaticon.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/user/css/tiny-slider.css">
    <link rel="stylesheet" href="~/user/css/aos.css">
    <link rel="stylesheet" href="~/user/css/glightbox.min.css">
    <link rel="stylesheet" href="~/user/css/style.css">

    <link rel="stylesheet" href="~/user/css/flatpickr.min.css">


    <title>User | Khrouga-خــــروجة</title>
</head>
<body>

    <div class="site-mobile-menu site-navbar-target">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close">
                <span class="icofont-close js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>


    @***************************************************************************************************@
    @*Start of Navbar*@
    <nav class="site-nav">
        <div class="container">
            <div class="menu-bg-wrap">
                <div class="site-navigation">
                    <div class="row g-0 align-items-center">
                        <div class="col-2">
                            <a asp-controller="User" asp-action="Index" class="logo m-0 float-start">Khrouga-خــــروجة<span class="text-primary">.</span></a>
                        </div>
                        <div class="col-8 text-center">
                            <ul class="js-clone-nav d-none d-lg-inline-block text-start site-menu mx-auto ms-auto">
                                <li class="active"><a asp-action="Index" asp-controller="User">Home</a></li>
                                <li class="active"><a asp-action="ContactUsMobiles" asp-controller="User">Contact Us</a></li>
                                <li class="has-children">
                                    <a href="#">Governments</a>
                                    <ul class="dropdown">
                                        @foreach (var government in context.Governments.ToList())
                                        {
                                            <li>
                                                <a asp-action="PlacesInGovernment" asp-controller="User" asp-route-Id=@government.Id>@government.Name</a>
                                            </li>
                                        }
                                    </ul>
                                </li>

                            </ul>

                        </div>
                        <div class="col-2 text-end">
                            <ul class="js-clone-nav d-none d-lg-inline-block text-start site-menu mx-auto ms-auto">
                                <li class="has-children">
                                    <a href="#">
                                        Welcome |
                                        <span class="nav-profile-name">
                                            @User.Identity.Name
                                        </span>
                                    </a>
                                    <ul class="dropdown">
                                        <li>
                                            <a asp-action="ChangePassword" asp-controller="Account">Change password</a>
                                        </li>
                                        <li>
                                            <a asp-action="Logout" asp-controller="Account">Sign out</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </nav>
    @*End of Navbar*@
    @***************************************************************************************************@


    @***************************************************************************************************@
    @*Start of Body*@
    <section class="section">
        <div class="container">

            @RenderBody()

        </div>
    </section>
    @*End of Body*@
    @***************************************************************************************************@



    <script src="~/user/js/bootstrap.bundle.min.js"></script>
    <script src="~/user/js/tiny-slider.js"></script>

    <script src="~/user/js/flatpickr.min.js"></script>


    <script src="~/user/js/aos.js"></script>
    <script src="~/user/js/glightbox.min.js"></script>
    <script src="~/user/js/navbar.js"></script>
    <script src="~/user/js/counter.js"></script>
    <script src="js/custom.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/vendors/chart.js/Chart.min.js"></script>
    <script src="~/js/js/off-canvas.js"></script>
    <script src="~/js/js/hoverable-collapse.js"></script>
    <script src="~/js/js/template.js"></script>
    <script src="~/js/js/dashboard.js"></script>
    <script src="~/Datatable/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/Datatable/dataTables.bootstrap4.min.js" type="text/javascript"></script>
    @await Component.InvokeAsync("NToastNotify")
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
