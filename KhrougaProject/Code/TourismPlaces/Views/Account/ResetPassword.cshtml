@model TourismPlaces.ViewModels.Account.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Reset Password";
}

<h6 class="font-weight-light">Reset your password to continue.</h6>

<form class="pt-3" asp-action="ResetPassword" asp-controller="Account">
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Token" />
    <div class="text-danger" asp-validation-summary="All">
    </div>

    <div class="form-group">
        <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Password">
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Confirm Password">
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Reset Password</button>
    </div>

</form>


@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}


