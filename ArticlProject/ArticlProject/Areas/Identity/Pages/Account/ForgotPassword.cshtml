@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "نسيان كلمة السر ؟";
}

<h1 style="font-family: Cairo;direction:rtl">@ViewData["Title"]</h1>
<h2 style="font-family: Cairo;direction:rtl">ادخل الإيميل </h2>
<hr />
<div class="row" style="font-family: Cairo;direction:rtl">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">ارسال</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
