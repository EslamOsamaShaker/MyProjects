@model TourismPlaces.ViewModels.Account.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}


<h6 class="font-weight-light">Sign in to continue.</h6>

<form class="pt-3" asp-action="Index" asp-controller="Account">
    <div class="text-danger" asp-validation-summary="All">
    </div>

    <div class="form-group">
        <input type="email" asp-for="Email" class="form-control form-control-lg" placeholder="user@domain.com">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Password">
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="mt-3">
        <button asp-route-returnurl="@Context.Request.Query["ReturnUrl"]"  type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN IN</button>
    </div>
    <div class="my-2 d-flex justify-content-between align-items-center">
        <div class="form-check">
            <label asp-for="RememberMe" class="form-check-label text-muted">
                <input type="checkbox" asp-for="RememberMe" class="form-check-input">
                Keep me signed in
                   <i class="input-helper"></i>
            </label>
        </div>

        <a asp-action="ForgetPassword" asp-controller="Account" class="auth-link text-black">Forgot password?</a>
    </div>
    <div class="text-center mt-4 font-weight-light">
        Don't have an account? <a asp-action="Registration" asp-controller="Account" class="text-primary">Sign Up</a>
    </div>
</form>


@section Scripts
    {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    }


