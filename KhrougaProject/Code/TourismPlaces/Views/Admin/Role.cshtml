@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Role";
}
@model IEnumerable<TourismPlaces.ViewModels.Admin.RoleViewModel>

@{
    int counter = 0;
}
<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Roles</h4>
                <p class="card-description">
                    <code>Add user to roles</code>
                </p>
                @if (Model.ToList().Count == 0)
                {
                    <span class="text-warning">There are no roles</span>
                }
                else
                {
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead class="text-center">
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Role Name
                                    </th>

                                    <th>
                                        Role Details
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td>
                                            @(++counter)
                                        </td>
                                        <td>
                                            @role.Name
                                        </td>

                                        <td>
                                            <a asp-action="RoleDetails" asp-controller="Admin" asp-route-roleId="@role.Id" class="  btn btn-primary btn-rounded btn-fw"> Details</a>
                                        </td>
                                        <td>
                                            <a asp-action="AddUsersToRole" asp-controller="Admin" asp-route-roleId="@role.Id" class="btn btn-success btn-rounded btn-fw"> Add users to role</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>

</div>