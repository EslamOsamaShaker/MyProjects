@model IEnumerable<TourismPlaces.ViewModels.PlacesRetrieveViewModelForUser>

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewBag.Title = "Index";
}
@if (!Model.Any())
{
    <p>No places yet.</p>
}
else
{
    <div class="row align-items-stretch retro-layout">
        <h1>Welcome to archaeological Places Near you </h1>
        @foreach (var place in Model)
        {
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body ">
                        <a asp-controller="User" asp-action="PlaceDetails" asp-route-placeId="@place.Id" class="h-entry  v-height gradient">
                            <div class="featured-img">

                                <img class="h-entry img-5 h-100 w-100 gradient" src="~/Files/photos/@place.PhotoPath" />
                            </div>

                            <div class="text">
                                <span class="date">@place.Name</span>
                                <h2>@place.Rate</h2>
                            </div>

                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

